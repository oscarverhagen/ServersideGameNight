@model Avans.GameNight.Core.Domain.Models.BoardGame
@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>BoardGame</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
               
                <input asp-for="NameGame" class="form-control" hidden/>
                <span asp-validation-for="NameGame" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Mature" /> @Html.DisplayNameFor(model => model.Mature)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Desciption" class="control-label"></label>
                <input asp-for="Desciption" class="form-control" />
                <span asp-validation-for="Desciption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KindOfGame" class="control-label"></label>
                <input asp-for="KindOfGame" class="form-control" />
                <span asp-validation-for="KindOfGame" class="text-danger"></span>
            </div>
            <div class="form-group">
               @* <label asp-for="PictureB" class="control-label"></label>*@
                <input asp-for="PictureB" class="form-control" hidden/>
                <span asp-validation-for="PictureB" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="PictureFormat" class="control-label"></label>*@
                <input asp-for="PictureFormat" class="form-control" hidden/>
                <span asp-validation-for="PictureFormat" class="text-danger"></span>
            </div>
            <br />

            <div>
                 <input asp-for="BoardGameNightBoardGame" class="form-control" hidden/>
               <span asp-validation-for="BoardGameNightBoardGame" class="text-danger"></span>
            </div>
            <div class="form-group">
               <a  asp-area="" asp-controller="BoardGame" asp-action="Index"><input type="submit" value="Save" class="btn btn-primary"style="background-image: url('https://wallpaperaccess.com/full/3405912.jpg'); border-color:  hsl(32, 45%, 25%);"/></a> 
            </div>
        </form>
    </div>
</div>
<br />
<div>
  <a  asp-area="" asp-controller="BoardGame" asp-action="Index"><input type="submit" value="Back to view" class="btn btn-primary"style="background-image: url('https://wallpaperaccess.com/full/3405912.jpg'); border-color:  hsl(32, 45%, 25%);" /></a> 
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
