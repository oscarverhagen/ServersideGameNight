@model Avans.GameNight.Core.Domain.Models.BoardGame

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Create a New Board Game</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NameGame" class="control-label">Game Name</label>
                <input asp-for="NameGame" class="form-control" required />
                <span asp-validation-for="NameGame" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Genre" class="control-label">Genre</label>
                <input asp-for="Genre" class="form-control" required />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>

            <div class="form-check">
                <input class="form-check-input" asp-for="Mature" />
                <label class="form-check-label" for="Mature">18+</label>
            </div>

            <div class="form-group">
                <label asp-for="Desciption" class="control-label">Description</label>
                <textarea asp-for="Desciption" class="form-control" required></textarea>
                <span asp-validation-for="Desciption" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="KindOfGame" class="control-label">Type of Game</label>
                <input asp-for="KindOfGame" class="form-control" required />
                <span asp-validation-for="KindOfGame" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Picture" class="control-label">Upload Picture</label>
                <input asp-for="Picture" accept="image/*" type="file" class="form-control-file" />
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary" style="background-color: hsl(32, 45%, 25%);border-color:hsl(32, 45%, 25%);">Create</button>
                <a asp-area="" asp-controller="Boardgame" asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
