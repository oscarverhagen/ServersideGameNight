@using Avans.GameNight.Core.DomainServices.Interfaces
@using Avans.GameNight.Infrastructure.EntityFramework.Interfaces
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject IPlayerRepository _playerRepo
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ServersideGameNight</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ServersideGameNight.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3 " >
            <div class="container-fluid">
                 @if (SignInManager.IsSignedIn(User))
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="LoginIndex"> <img src="~/img//BoardgameLogo.png"  width="115" height="80" alt="Logo"  /></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                }else
                {
                     <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> <img src="~/img//BoardgameLogo.png"  width="115" height="80" alt="Logo"  /></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                }
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1"> 
                        @if (SignInManager.IsSignedIn(User))
                        {
                            
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="BoardGameNight" asp-action="Create">Create Game</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="BoardGameNight" asp-action="Index">Join Game</a>
                                </li>

                                 <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="BoardGame" asp-action="Index">Boardgames</a>
                                </li>
                                
                        }
                           
                        else {
                                <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Login">Create Game</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Login">Join Game</a>
                            </li>
                             <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Login">Boardgames</a>
                            </li>
                              
                            }
                            </ul>
                    <ul class="navbar-nav navbar-right">
                        @if (SignInManager.IsSignedIn(User))
                        {
                              <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="BoardGameNight" asp-action="MyBoardGameNights">My Games</a>
                                </li>
                          <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Player" asp-action="Profile">Profile</a>    
                         </li>  

                         <li class="nav-item">
                            <form id="logoutForm" class="form-inline" asp-controller="Account" asp-action="Logout">
                             <button id="logout" type="submit" class="nav-link btn btn-link text-white">Logout</button>
                            </form>
                         </li>
                      
                        }
                        else
                        {
                             <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Login">My Games</a>
                            </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-white navbar-text navbar-right" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
              <div class="container-fluid px-4">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success "  role="alert">
                            @*<strong>Success</strong> *@<strong>@TempData["SuccessMessage"]</strong>
                        </div>
                    }
                    @if (TempData["WarningMessage"] != null)
                    {
                        <div class="alert alert-warning" role="alert">
                            @*<strong>Warning</strong>*@ <strong>@TempData["WarningMessage"]</strong>
                        </div>
                    }
                   @if(TempData["ErrorMessage"] != null)
                   {
                        <div class="alert alert-danger" role="alert">
                            @*<strong>Error</strong>*@ <strong>@TempData["ErrorMessage"]</strong>
                        </div>
                    }
                    @RenderBody()

                </div>
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
