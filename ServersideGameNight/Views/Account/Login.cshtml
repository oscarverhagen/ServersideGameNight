@model Avans.GameNight.App.Models.LoginModel
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #F0CEA3;
        }

        .login-container {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .login-heading {
            color: black;
            text-align: center;
        }

        .form-label {
            font-weight: bold;
        }

        .short-input {
            width: 100%;
        }

        .short-button {
            width: 100%;
            margin-top: 10px;
            background-color: hsl(32, 45%, 25%);
            border-color: hsl(32, 45%, 25%);
            color: #ffffff;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <div class="login-container">
            <h1 class="login-heading">Login</h1>
            <hr />

            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label class="form-label">Email:</label>
                    <input class="form-control short-input" name="Email" type="email" />
                </div>

                <div class="form-group">
                    <label class="form-label">Password:</label>
                    <input class="form-control short-input" name="Password" type="password" />
                </div>

                <button type="submit" class="btn btn-secondary short-button">Login</button>
            </form>

            <div class="text-center mt-3">
                <a asp-area="" asp-controller="Account" asp-action="Register"
                   class="btn btn-secondary short-button">Register</a>
            </div>
        </div>
    </div>

</body>
</html>
