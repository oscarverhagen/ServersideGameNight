@model Avans.GameNight.Core.Domain.Models.BoardGameNight
@using Avans.GameNight.App.Models
@using Avans.GameNight.Core.Domain.Models
@{
    ViewData["Title"] = "Create Board Game Night";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Game Night</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label for="NameNight">Game Night Name</label>
                <input asp-for="NameNight" class="form-control" required />
                <div class="invalid-feedback">Please provide a name for the board game night.</div>
            </div>

            <div class="form-group">
                <label for="MaxPlayers">Maximum Number of Players</label>
                <input asp-for="MaxPlayers" class="form-control" required />
                <div class="invalid-feedback">Please specify the maximum number of players.</div>
            </div>

            <div class="form-group">
                <label for="DateTime">Date</label>
                <input asp-for="DateTime" class="form-control" type="date" required />
                <div class="invalid-feedback">Please choose a date and time.</div>
            </div>

            <div class="form-group">
                <label for="Adress">Address</label>
                <input asp-for="Adress" class="form-control" required />
                <div class="invalid-feedback">Please provide an address.</div>
            </div>

            <div class="form-group">
                <label for="Food">Food</label>
                <input asp-for="Food" class="form-control" required />
                <div class="invalid-feedback">Please specify the food options.</div>
            </div>

            <div class="form-group">
                <label for="Drink">Drinks</label>
                <input asp-for="Drink" class="form-control" required />
                <div class="invalid-feedback">Please specify the drink options.</div>
            </div>

            <div class="form-group form-check">
                <input class="form-check-input" asp-for="Mature" />
                <label class="form-check-label" for="Mature">18+ Only</label>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary" style="background-color: hsl(32, 45%, 25%);border-color:hsl(32, 45%, 25%);">
                    Create Board Game Night
                </button>
                <a asp-area="" asp-controller="BoardGameNight" asp-action="Index" class="btn btn-secondary">
                    Back to List
                </a>
            </div>
        </form>
    </div>
</div>
