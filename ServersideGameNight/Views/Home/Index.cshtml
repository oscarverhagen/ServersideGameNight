@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #F0CEA3;
        }

        .welcome-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .welcome-heading {
            color: #343a40;
            text-align: center;
        }

        .short-button {
            background-color: hsl(32, 45%, 25%);
            border-color: hsl(32, 45%, 25%);
            color: #ffffff;
            padding: 5px 10px;
            margin-top: 10px;
        }

            .short-button:hover {
                background-color: #222;
                border-color: #222;
            }
    </style>
</head>
<body>

    <div class="container mt-5">
        <div class="welcome-container">
            <h1 class="welcome-heading">Welcome</h1>

            <div class="text-center">
                <p>To login to your account, please press "Login"</p>
                <a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-primary short-button">Login</a>
            </div>

            <div class="text-center mt-3">
                <p>To register an account, please press "Register"</p>
                <a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-primary short-button">Register</a>
            </div>
        </div>
    </div>

</body>
</html>
